<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.wype.security"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="false"
        android:label="Wype"
        android:icon="@mipmap/ic_launcher"
        android:supportsRtl="true"
        android:theme="@style/Theme.MaterialComponents.DayNight.NoActionBar">

        <!--
          Note to agent:
          - Device admin <receiver> will be added in PR-A.
          - FileProvider and any services/activities for new features
            will be added in PR-B/PR-C.
        -->

        <!-- Device admin receiver added by PR-A -->
        <receiver
            android:name=".provisioning.DeviceAdminRcvr"
            android:permission="android.permission.BIND_DEVICE_ADMIN"
            android:exported="true">
            <meta-data
                android:name="android.app.device_admin"
                android:resource="@xml/device_admin_receiver" />
            <intent-filter>
                <action android:name="android.app.action.DEVICE_ADMIN_ENABLED" />
            </intent-filter>
        </receiver>

    </application>
</manifest>